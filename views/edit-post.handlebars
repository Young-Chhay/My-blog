<div class="container-fluid main-container">
  <div class="card">
    <div class="card-header">
      <h3>UPDATE BLOG POST</h3>
    </div>
    <div class="card-body">
      <form class="edit-post-form">
        <div class="mb-3">
          <label for="post-title" class="form-label">Blog Title</label>
          <input
            type="text" 
            name="post-title"
            value="{{blog.title}}"
            class="form-input"
          />
          <input type="hidden" name="post-id" value="{{blog.id}}" />
        </div>
        <div class="mb-3">
          <label class="form-label" for="post-body">Content</label>
           <textarea
            for="description"
            type="text"
            id="update-description"
            class="form-control"
          >{{blog.body}}</textarea>
        </div>
        <button class="btn btn-primary btn-newblog" type="submit">POST BLOG</button>
      </form>
    </div>
  </div>
</div>

<script src="./js/editPost.js"></script>